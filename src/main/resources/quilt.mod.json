{
	"schema_version": 1,
	"quilt_loader": {
		"group": "folk.sisby",
		"id": "portable-crafting-standalone",
		"version": "${version}",
		"metadata": {
			"name": "Portable Crafting Standalone",
			"description": "A mod for Quilt that allows using crafting tables in your inventory.",
			"contributors": {
				"Sisby Folk": "Owner"
			},
			"contact": {
				"homepage": "https://modrinth.com/mod/portable-crafting-standalone",
				"issues": "https://github.com/sisby-folk/portable-crafting-standalone/issues",
				"sources": "https://github.com/sisby-folk/portable-crafting-standalone"
			},
			"icon": "assets/portable_crafting_standalone/icon.png"
		},
		"intermediate_mappings": "net.fabricmc:intermediary",
		"entrypoints": {
			"init": "folk.sisby.portable_crafting_standalone.PortableCraftingStandalone",
			"client_init": "folk.sisby.portable_crafting_standalone.PortableCraftingStandaloneClient"
		},
		"depends": [
			{
				"id": "quilt_loader",
				"versions": ">=0.16.0-"
			},
			{
				"id": "quilted_fabric_api",
				"versions": ">=1.0.0-"
			},
			{
				"id": "minecraft",
				"versions": ">=1.18.2"
			},
			{
				"id": "inventorytabs",
				"versions": ">=0.6.0-1.18.x",
				"optional": true
			}
		]
	},
	"mixin": "portable_crafting_standalone.mixins.json"
}
